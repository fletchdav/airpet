<div class="card">
  <%= link_to pet_path(pet) do %>
    <div class="card-body" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.2) 50%), url(<%= pet.picture %>);">
      <div class="card-category">
        <h1><%= pet.name %></h1>
      </div>
      <img src=<%= pet.user.picture %> class="avatar card-avatar">
      <div class="card-desc">
        <h3><%= pet.title %></h3>
      </div>
    </div>
  <% end %>
    <div class="card-footer">
      <div class="card-date">
        #<%= pet.character %>
      </div>
      <div class="card-links">
        <a href="#"><i class="fa fa-star" aria-hidden="true"></i></a>
        <a href="#"><i class="fa fa-heart" aria-hidden="true"></i></a>
      </div>
    </div>
</div>
