 <div class="main_container">
  <div class="cards">
    <div class="row">
      <% @pets.each do |pet| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <%= render 'shared/card', pet: pet %>
        </div>
      <% end %>
    </div>
  </div>

  <div id="map" data-markers="<%= @markers.to_json %>"></div>

</div>


