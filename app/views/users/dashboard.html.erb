<div class="container" id="resa1">
  <h1>Hello, je suis le bloc resa1</h1>
  </div>

  <div class="container hidden" id="resa2">
    <div class="resa">
      <%= image_tag "avatar.png", class: "resa-avatar" %>
      <div class="user-identity">
        <h3>fletchdav@gmail.com</h3>
        <p>29 novembre</p>
      </div>
      <div class="resa-details">
        <div class="resa-details-pet">
          <%= cl_image_tag "qravmzy6k7pcxo5dk7ay", class: "pet-image-small" %>
        </div>
        <div class="resa-details-dates">
          <h3>Gaston</h3>
          <p><strong>29 novembre - 10 décembre</strong></p>
          <p>11 jours</p>
        </div>
      </div>
      <div class="resa-status">
        <h3>en attente</h3>
        <p>Prix total</p>
        <p><strong>189 €</strong></p>
      </div>
      <div class="resa-actions">
        <ul>
          <li>
            <%= link_to "" do %>
              <i class="fa fa-check-circle-o" aria-hidden="true"></i>
            <% end %>
          </li>
          <li>
            <%= link_to "" do %>
              <i class="fa fa-times-circle-o" aria-hidden="true"></i>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
</div>

<div class="container hidden" id="pets">
  <% @pets.each do |pet| %>
    <div class="pet">
      <%= cl_image_tag pet.photo, class: "pet-image" %>
      <div class='pet-identity'>
        <h3><%= pet.name %></h3>
        <p><%= pet.title %></p>
        <h4><%= pet.price %> €</h4>
      </div>
      <div class="pet-details">
        <p><%= pet.description %></p>
      </div>
      <ul class="list-inline pet-controls">
        <li>
          <%= link_to edit_pet_path(pet) do %>
            <i class="fa fa-pencil"></i>
          <% end %>
        <li>
        <li>
          <%= link_to pet_path(pet), :method => 'delete' do %>
            <i class="fa fa-trash-o"></i>
          <% end %>
        <li>
      </ul>
    </div>
  <% end %>
</div>
